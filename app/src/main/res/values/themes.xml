    <style name="Theme.SubmissionAwal" parent="Base.Theme.SubmissionAwal" />
    
    <style name="FloatBackground" parent="@style/Widget.MaterialComponents.FloatingActionButton"><item name="materialThemeOverlay">@style/FloatOverlay</item></style>
